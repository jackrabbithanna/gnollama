<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>io.github.jackrabbithanna.Gnollama</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0-or-later</project_license>

  <name>Gnollama</name>
  <summary>GNOME based UI for Ollama</summary>
  <description>
    <p>Chat with Ollama on any host.</p>
    <p>Supports "generate" and "chat" Ollama APIs</p>
    <p>Displays the "Thinking" stream in a fieldset in the response bubble.</p>
    <p>Chats are saved between sessions, and chat titles can be edited, and chats deleted</p>
    <p>Supports all API parameters including system prompt, images, temperature, etc..</p>
    <p>Renders Markdown and code blocks have code highlighting</p>
  </description>

  <developer id="tld.vendor">
    <name>jackrabbithanna</name>
  </developer>

  <!-- Required: Should be a link to the upstream homepage for the component -->
  <url type="homepage">https://github.com/jackrabbithanna/gnollama/</url>
  <!-- Recommended: It is highly recommended for open-source projects to display the source code repository -->
  <url type="vcs-browser">https://github.com/jackrabbithanna/gnollama</url>
  <!-- Should point to the software's bug tracking system, for users to report new bugs -->
  <url type="bugtracker">https://github.com/jackrabbithanna/gnollama/issues</url>
  <!-- Should link a FAQ page for this software, to answer some of the most-asked questions in detail -->
  <!-- URLs of this type should point to a webpage where users can submit or modify translations of the upstream project -->

  <translation type="gettext">gnollama</translation>
  <!-- All graphical applications having a desktop file must have this tag in the MetaInfo.
     If this is present, appstreamcli compose will pull icons, keywords and categories from the desktop file. -->
  <launchable type="desktop-id">io.github.jackrabbithanna.Gnollama.desktop</launchable>
  <!-- Use the OARS website (https://hughsie.github.io/oars/generate.html) to generate these and make sure to use oars-1.1 -->
  <content_rating type="oars-1.1" />

  <!-- Applications should set a brand color in both light and dark variants like so -->
  <branding>
    <color type="primary" scheme_preference="light">#ff00ff</color>
    <color type="primary" scheme_preference="dark">#993d3d</color>
  </branding>

  <screenshots>
    <screenshot type="default">
      <image>https://github.com/jackrabbithanna/gnollama/blob/main/screenshots/gnollama-screenshot.png?raw=true</image>
      <caption>Ollama chat with code highlighting</caption>
    </screenshot>
  </screenshots>

  <releases>
    <release version="0.5.6" date="2025-12-28">
      <url type="details">https://github.com/jackrabbithanna/gnollama/releases/tag/0.5.6</url>
      <description translate="no">
        <p>First production release</p>
      </description>
    </release>
  </releases>

</component>
