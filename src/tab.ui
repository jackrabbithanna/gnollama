<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk" version="4.0"/>
  <requires lib="Adw" version="1.0"/>
  <template class="GenerationTab" parent="GtkBox">
    <property name="orientation">vertical</property>
    <child>
      <object class="GtkScrolledWindow">
        <property name="vexpand">True</property>
        <property name="hexpand">True</property>
        <child>
          <object class="GtkBox" id="chat_box">
            <property name="orientation">vertical</property>
            <property name="spacing">12</property>
            <property name="hexpand">True</property>
            <property name="vexpand">True</property>
            <property name="margin-start">12</property>
            <property name="margin-end">12</property>
            <property name="margin-top">12</property>
            <property name="margin-bottom">12</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="spacing">6</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <child>
          <object class="GtkDropDown" id="model_dropdown">
            <property name="valign">center</property>
            <property name="tooltip-text" translatable="yes">Select Model</property>
          </object>
        </child>
        <child>
          <object class="GtkDropDown" id="thinking_dropdown">
            <property name="valign">center</property>
            <property name="tooltip-text" translatable="yes">Thinking Level</property>
          </object>
        </child>
        <child>
          <object class="GtkEntry" id="entry">
            <property name="hexpand">True</property>
            <property name="placeholder-text" translatable="yes">Type a message...</property>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="send_button">
            <property name="icon-name">system-search-symbolic</property>
            <property name="tooltip-text" translatable="yes">Query Ollama</property>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkBox">
        <property name="orientation">horizontal</property>
        <property name="spacing">6</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="margin-bottom">6</property>
        <child>
          <object class="GtkButton" id="attach_button">
            <property name="icon-name">insert-image-symbolic</property>
            <property name="tooltip-text" translatable="yes">Attach Image</property>
          </object>
        </child>
        <child>
          <object class="GtkLabel" id="image_label">
            <property name="label" translatable="yes">No image selected</property>
            <style>
               <class name="dim-label"/>
            </style>
          </object>
        </child>
        <child>
          <object class="GtkButton" id="clear_image_button">
            <property name="icon-name">edit-clear-symbolic</property>
            <property name="tooltip-text" translatable="yes">Clear Image</property>
            <property name="visible">False</property>
            <style>
              <class name="flat"/>
            </style>
          </object>
        </child>
      </object>
    </child>
    <child>
      <object class="GtkExpander">
        <property name="label">Advanced Settings</property>
        <property name="margin-start">12</property>
        <property name="margin-end">12</property>
        <property name="margin-bottom">12</property>
        <child>
          <object class="GtkBox">
            <property name="orientation">vertical</property>
            <property name="spacing">6</property>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Ollama Host:</property>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="host_entry">
                    <property name="hexpand">True</property>
                    <property name="placeholder-text" translatable="yes">http://localhost:11434</property>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkEntry" id="system_prompt_entry">
                <property name="placeholder-text" translatable="yes">System Prompt (optional)</property>
              </object>
            </child>
            <child>
              <object class="GtkCheckButton" id="stats_check">
                <property name="label" translatable="yes">Show statistics</property>
              </object>
            </child>
            <child>
              <object class="GtkCheckButton" id="logprobs_check">
                <property name="label" translatable="yes">Return logprobs</property>
              </object>
            </child>
            <child>
              <object class="GtkBox">
                <property name="orientation">horizontal</property>
                <property name="spacing">6</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Top Logprobs:</property>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="top_logprobs_entry">
                    <property name="placeholder-text" translatable="yes">Integer (e.g., 5)</property>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Number of top logprobs to return</property>
                    <style>
                      <class name="dim-label"/>
                    </style>
                  </object>
                </child>
              </object>
            </child>
            <child>
              <object class="GtkGrid">
                <property name="column-spacing">12</property>
                <property name="row-spacing">6</property>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Seed:</property>
                    <property name="halign">end</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="seed_entry">
                    <property name="placeholder-text" translatable="yes">Integer</property>
                    <property name="tooltip-text" translatable="yes">Random number seed</property>
                    <property name="hexpand">True</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Temperature:</property>
                    <property name="halign">end</property>
                    <layout>
                      <property name="column">2</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="temperature_entry">
                    <property name="placeholder-text" translatable="yes">Float</property>
                    <property name="tooltip-text" translatable="yes">Creativity (0.0 - 1.0)</property>
                    <property name="hexpand">True</property>
                    <layout>
                      <property name="column">3</property>
                      <property name="row">0</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Top K:</property>
                    <property name="halign">end</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="top_k_entry">
                    <property name="placeholder-text" translatable="yes">Integer</property>
                    <property name="tooltip-text" translatable="yes">Limit to top K tokens</property>
                    <property name="hexpand">True</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Top P:</property>
                    <property name="halign">end</property>
                    <layout>
                      <property name="column">2</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="top_p_entry">
                    <property name="placeholder-text" translatable="yes">Float</property>
                    <property name="tooltip-text" translatable="yes">Limit to cumulative probability P</property>
                    <property name="hexpand">True</property>
                    <layout>
                      <property name="column">3</property>
                      <property name="row">1</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Min P:</property>
                    <property name="halign">end</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="min_p_entry">
                    <property name="placeholder-text" translatable="yes">Float</property>
                    <property name="tooltip-text" translatable="yes">Minimum probability</property>
                    <property name="hexpand">True</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Context Size:</property>
                    <property name="halign">end</property>
                    <layout>
                      <property name="column">2</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="num_ctx_entry">
                    <property name="placeholder-text" translatable="yes">Integer</property>
                    <property name="tooltip-text" translatable="yes">Context window size (num_ctx)</property>
                    <property name="hexpand">True</property>
                    <layout>
                      <property name="column">3</property>
                      <property name="row">2</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Max Tokens:</property>
                    <property name="halign">end</property>
                    <layout>
                      <property name="column">0</property>
                      <property name="row">3</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="num_predict_entry">
                    <property name="placeholder-text" translatable="yes">Integer</property>
                    <property name="tooltip-text" translatable="yes">Max tokens to generate (num_predict)</property>
                    <property name="hexpand">True</property>
                    <layout>
                      <property name="column">1</property>
                      <property name="row">3</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkLabel">
                    <property name="label" translatable="yes">Stop Seq:</property>
                    <property name="halign">end</property>
                    <layout>
                      <property name="column">2</property>
                      <property name="row">3</property>
                    </layout>
                  </object>
                </child>
                <child>
                  <object class="GtkEntry" id="stop_entry">
                    <property name="placeholder-text" translatable="yes">String</property>
                    <property name="tooltip-text" translatable="yes">Stop sequence (comma separated)</property>
                    <property name="hexpand">True</property>
                    <layout>
                      <property name="column">3</property>
                      <property name="row">3</property>
                    </layout>
                  </object>
                </child>
              </object>
            </child>
          </object>
        </child>
      </object>
    </child>
  </template>
</interface>
